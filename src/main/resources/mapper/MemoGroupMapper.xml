<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.api.server.dao.MemoGroupMapper">
	
	<resultMap id="memoGroupResponse" type="com.api.server.model.memogroup.MemoGroupResponse" autoMapping="true"/>
	
	<select id="selectMemoGroups" resultMap="memoGroupResponse">
 		SELECT * FROM MEMO_GROUP 
        WHERE 1=1
        <if test='userId != null'>
          AND USER_ID = #{userId} 
        </if>
 		ORDER BY NAME ASC
	</select>
	
	<update id="updateMemoGroup">
 		UPDATE MEMO_GROUP SET
 		  NAME = #{name}
 		 ,UPDATE_DT = NOW()
 		WHERE ID = #{id}
	</update>
	
	<insert id="createMemoGroup">
 		INSERT INTO MEMO_GROUP (
 			 ID
 			,USER_ID
 			,NAME
 			,CREATE_DT
 			,CREATE_USER_ID
 			,UPDATE_DT
 			,UPDATE_USER_ID
 		) VALUES (
 			 #{id}
 			,#{agentId}
 			,#{title}
 			,NOW()
 			,#{agentId}
 			,NOW()
 			,#{agentId}
 		)
	</insert>
	
	<delete id="deleteMemoGroup">
 		DELETE FROM MEMO_GROUP
 		WHERE ID = #{id}
	</delete>
	
	<delete id="deleteMemoGroups">
 		DELETE FROM MEMO_GROUP
	</delete>
	
	<select id="checkMemoGroupTitle" resultType="int">
 		SELECT 
 			COUNT(*) 
 		FROM MEMO_GROUP
 		WHERE NAME = #{title}
	</select>
</mapper>